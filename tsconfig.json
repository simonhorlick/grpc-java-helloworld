{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./out/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES6",
    "allowJs": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es7"
    ]
  },
  "include": [
    "./js/**/*"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./js/**/*.test.ts",
    "./js/**/*.test.tsx"
  ]
}
